{
	"files.exclude": {
		//"**/___editor_backup_*": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true
	},
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.organizeImports": true
	},
	"javascript.preferences.importModuleSpecifier": "non-relative",
	"typescript.preferences.importModuleSpecifier": "non-relative",
	"typescript.tsserver.experimental.enableProjectDiagnostics": true,
	"cSpell.diagnosticLevel": "Hint",
	"editor.formatOnType": false,
	"editor.formatOnPaste": false,
	"blockshighlighter.blocks": [

		{
			"fileType": "\\.(js|ts)$",
			"begin": "^\\s*///\\s*#if EDITOR\\s*$",
			"end": "^\\s*///\\s*#endif\\s*$",
			"decorationRenderOptions": {
				"isWholeLine": true,
				"backgroundColor": "rgba(100,100,255,0.06)"
			}
		},
		{
			"fileType": "\\.(js|ts)$",
			"begin": "^\\s*///\\s*#if DEBUG\\s*$",
			"end": "^\\s*///\\s*#endif\\s*$",
			"decorationRenderOptions": {
				"isWholeLine": true,
				"backgroundColor": "rgba(100,255,100,0.06)"
			}
		},
		{
			"fileType": "\\.(js|ts)$",
			"begin": "^\\s*@editable\\(",
			"end": "^\\s*@editable\\(",
			"decorationRenderOptions": {
				"isWholeLine": true,
				"opacity": "0.5"
			}
		}
	],
	"bookmarks.keepBookmarksOnLineDelete": false,
	"javascript.preferences.importModuleSpecifierEnding": "index",
	"typescript.preferences.importModuleSpecifierEnding": "index"
}