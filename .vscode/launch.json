{
	"version": "0.2.0",
	"configurations": [

		{
			"name": "Renderer",
			"type": "chrome",
			"request": "attach",
			"port": 9223,
			"webRoot": "${workspaceFolder}",
			"timeout": 30000,
			"enableContentValidation": false,
			"presentation": {
				"hidden": true
			},
			"skipFiles": [],
			"sourceMaps": true,
			"smartStep": true,

			"targetSelection": "pick",
			
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"urlFilter": "http://127.0.0.1:5173/*"
			
		},
		{
			"type": "node",
			"request": "launch",
			"name": "MainForBoth",
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
			"windows": {
				"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
			},
			"env": {"ELECTRON_ENABLE_LOGGING":"true"},
			"args": [
				"--remote-debugging-port=9223",
				"./thing-editor/electron-main", "debugger-detection-await"
			],
			"presentation": {
				"hidden": true
			}
		},
		{
			"name": "Editor",
			"type": "chrome",
			"request": "launch",
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
			"runtimeArgs": [
				"--remote-debugging-port=9223",
				"./thing-editor/electron-main",
				"debugger-detection-await"
			],
			"windows": {
				"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
				//"runtimeExecutable": "C:/Windows/System32/cmd.exe",
				//"runtimeArgs": ["k/", "C:\\Dropbox\\electron-vite-preact\\1.bat"]
			},
			"port": 9223,
			"webRoot": "${workspaceFolder}",
			"timeout": 3000,
			"vueComponentPaths": [],
			"enableContentValidation": false,
			"outFiles": [],
			"presentation": {
				//"hidden": true
			},
			"sourceMaps": true,
			"smartStep": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			/*"trace": {
				"logFile": "${workspaceRoot}/dbug.log"
			}*/
			//"urlFilter": "http://127.0.0.1:5173/*"
		}
	],
	"compounds": [{
		"name": "Both",
		"configurations": ["Renderer", "MainForBoth"],
		"stopAll": true,
		"presentation": {
			//"hidden": true
		}
	}]
}