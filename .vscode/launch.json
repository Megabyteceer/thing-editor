{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Editor",
			"type": "chrome",
			"request": "attach",
			"webRoot": "${workspaceFolder}",
			"timeout": 30000,
			"port": 9224,
			"enableContentValidation": false,
			"presentation": {
				//"hidden": true
			},
			"skipFiles": [],
			"sourceMaps": true,
			"smartStep": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"urlFilter": "http://127.0.0.1:5173/*",
			"outFiles": [],
			"preLaunchTask": "launch electron"
		},
		{
			"name": "Render",
			"type": "chrome",
			"request": "attach",
			"webRoot": "${workspaceFolder}",
			"timeout": 30000,
			"port": 9224,
			"enableContentValidation": false,
			"presentation": {
				"hidden": true
			},
			"skipFiles": [],
			"sourceMaps": true,
			"smartStep": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"urlFilter": "http://127.0.0.1:5173/*",
			"outFiles": []
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Main",
			"port": 9223,
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
			"autoAttachChildProcesses": true,
			"windows": {
				"runtimeExecutable": "${workspaceFolder}/node_modules/electron/dist/electron.exe"
			},
			"env": {"ELECTRON_ENABLE_LOGGING":"true"},
			"args": [
				"--remote-debugging-port=9223",
				"./thing-editor/electron-main",
				"debugger-detection-await"
			],
			"presentation": {
				"hidden": true
			}
		}
	],
	"compounds": [{
		"name": "Main & Render",
		"configurations": ["Render", "Main"],
		"stopAll": true,
		"presentation": {
			//"hidden": true
		}
	}]
}