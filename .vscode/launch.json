{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Editor",
			"type": "chrome",
			"request": "attach",
			"webRoot": "${workspaceFolder}",
			"timeout": 5000,
			"port": 9223,
			"enableContentValidation": false,
			"presentation": {
				//"hidden": true
			},
			"skipFiles": [],
			"sourceMaps": true,
			"smartStep": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"urlFilter": "http://127.0.0.1:5173/*",
			"outFiles": [],
			"preLaunchTask": "launchElectronIfStopped",
			/*"trace": {
				"logFile": "trace.txt"
			}*/
		},
		{
			"name": "Render",
			"type": "chrome",
			"request": "attach",
			"webRoot": "${workspaceFolder}",
			"timeout": 30000,
			"port": 9223,
			"enableContentValidation": false,
			"presentation": {
				"hidden": true
			},
			"skipFiles": [],
			"sourceMaps": true,
			"smartStep": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"urlFilter": "http://127.0.0.1:5173/*",
			"outFiles": []
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Main",
			"port": 9223,
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
			"autoAttachChildProcesses": true,
			"windows": {
				"runtimeExecutable": "${workspaceFolder}/node_modules/electron/dist/electron.exe"
			},
			"env": {"ELECTRON_ENABLE_LOGGING":"true", "ELECTRON_LOG_FILE": "C:\\Dropbox\\electron-vite-preact\\log.log"},
			"args": [
				"--remote-debugging-port=9223",
				//	"--wait-for-debugger",
				"./thing-editor/electron-main",
				"debugger-detection-await"
			],
			"presentation": {
				"hidden": true
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "runner",
			"port": 9229,
			"cwd": "${workspaceFolder}",
			"args": ["./thing-editor/electron-main/launch-if-stopped.js"]
			
		},
		{
			"type": "node",
			"request": "launch",
			"name": "vite build",
			"port": 9232,
			"cwd": "${workspaceFolder}",
			"args": ["./vite-build.js"]
			
		}
	],
	"compounds": [{
		"name": "Main & Render",
		"configurations": ["Render", "Main"],
		"stopAll": true,
		"presentation": {
			//"hidden": true
		}
	}]
}