{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [{
			"label": "Run vite",
			"type": "npm",
			"isBackground": true,
			"script": "dev",
			"runOptions": {
				"runOn": "folderOpen"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "launch electron",
			"command": "${workspaceFolder}/node_modules/.bin/electron",
			"windows": {
				"command": "${workspaceFolder}/node_modules/.bin/electron.cmd"
			},
			"args": [
				"./thing-editor/electron-main",
				"--remote-debugging-port=9223",
				"debugger-detection-await"
			],
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": [{
				"pattern": [{
					"regexp": ".",
					"file": 1,
					"location": 2,
					"message": 3
				}],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "DevTools",
					"endsPattern": "debugger detector waits", //[vite] connected.
				}
			}]
		}
	]
}